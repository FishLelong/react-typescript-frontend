{
  "extends": "tslint-config-airbnb",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "semicolon": [ true, "always", "ignore-bound-class-methods" ],
    "variable-name": [true, "allow-pascal-case"],
    "import-name": [false]
  }
}
